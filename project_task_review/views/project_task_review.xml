<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id="view_project_task_review_tree" model="ir.ui.view">
        <field name="name">project.task.review.tree</field>
        <field name="model">project.task.review</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reviewer_id"/>
                <field name="date"/>
                <field name="review"/>
                <field name="task_id"/>
                <field name="score" widget="badge"
                decoration-danger="score == '1'"
                decoration-warning="score == '2'"
                decoration-info="score == '3'"
                decoration-primary="score == '4'"
                decoration-success="score == '5'"/>
            </tree>
        </field>
    </record>

    <record id="view_project_task_review_form" model="ir.ui.view">
        <field name="name">project.task.review.form</field>
        <field name="model">project.task.review</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="score"/>
                        <field name="date"/>
                        <field name="reviewer_id"/>
                        <field name="task_id"/>
                        <field name="review"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_task_review" model="ir.actions.act_window">
        <field name="name">Task Reviews</field>
        <field name="res_model">project.task.review</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first task review
            </p>
        </field>
    </record>

    <menuitem id="menu_project_task_review"
              name="Task Reviews"
              parent="project.menu_projects"
              action="action_project_task_review"
              sequence='20'/>
</odoo>
