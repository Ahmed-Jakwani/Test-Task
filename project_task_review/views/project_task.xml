<?xml version="1.0" encoding="utf-08"?>

<odoo>

    <record id="view_project_task_form_inherit_reviews" model="ir.ui.view">
        <field name="name">project.task.form.inherit.reviews</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" icon="fa-bars"
                        name="action_open_task_reviews">
                    <span class="o_stat_value">
                        <field name="reviews_count" widget="statinfo" nolabel="1"/>
                    </span>
                    <span class="o_stat_text">Reviews</span>
                </button>
            </xpath>

        </field>
    </record>

</odoo>